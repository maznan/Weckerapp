{{#each model as |alarm|}}
    <div class="alarmListItem {{if alarm.on 'alarmOn'}}">
        <h1 class="delete" {{action "deleteAlarm" alarm}}>x</h1>
        {{#link-to "alarms.edit" alarm tagName="h2"}}
            {{alarm.title}}
        {{/link-to}}
        <div class="timeToggleWrapper">
            {{#link-to "alarms.edit" alarm tagName="h1" class="alarmTime"}}
                {{alarm.time}}
            {{/link-to}}
            <div {{action "toggleOnOff" alarm}} class="onofftoggle {{if alarm.on 'toggleOn'}}">
                <div class="switch"></div>
            </div>
        </div>
        
        <div class="repeatList">    
            <p {{action "toggleMonday" alarm}} class="day {{if alarm.monday 'dayOn'}}">MON</p>
            <p {{action "toggleThuesday" alarm}} class="day {{if alarm.thuesday 'dayOn'}}">THU</p>
            <p {{action "toggleWednsday" alarm}} class="day {{if alarm.wednsday 'dayOn'}}">WED</p>
            <p {{action "toggleThursday" alarm}} class="day {{if alarm.thursday 'dayOn'}}">THU</p>
            <p {{action "toggleFriday" alarm}} class="day {{if alarm.friday 'dayOn'}}">FRI</p>
            <p {{action "toggleSaturday" alarm}} class="day {{if alarm.saturday 'dayOn'}}">SAT</p>
            <p {{action "toggleSunday" alarm}} class="day {{if alarm.sunday 'dayOn'}}">SON</p>
        </div>
    </div>

{{/each}}
{{#link-to "alarms.new" tagName="div"}}
    <div class="alarmNew">
        <div class="horizontal"></div>
        <div class="vertical"></div>
    </div>
{{/link-to}}