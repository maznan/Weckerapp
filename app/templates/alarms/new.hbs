<h2>{{input value=model.title}}</h2>
<h1>{{input value=model.time}}</h1>
An {{input type="checkbox" checked=model.on}}
<div class="repeatList">
    <h3 {{action "toggleMonday" model}} class="day {{if model.monday 'dayOn'}}">MON</h3>
    <h3 {{action "toggleTuesday" model}} class="day {{if model.tuesday 'dayOn'}}">TUE</h3>
    <h3 {{action "toggleWednsday" model}} class="day {{if model.wednsday 'dayOn'}}">WED</h3>
    <h3 {{action "toggleThursday" model}} class="day {{if model.thursday 'dayOn'}}">THU</h3>
    <h3 {{action "toggleFriday" model}} class="day {{if model.friday 'dayOn'}}">FRI</h3>
    <h3 {{action "toggleSaturday" model}} class="day {{if model.saturday 'dayOn'}}">SAT</h3>
    <h3 {{action "toggleSunday" model}} class="day {{if model.sunday 'dayOn'}}">SUN</h3>
</div>
<button {{action "save" model}}>Speichern</button>